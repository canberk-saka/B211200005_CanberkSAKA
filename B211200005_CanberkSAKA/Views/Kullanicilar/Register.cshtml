@model B211200005_CanberkSAKA.Kullanicilar

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-label {
        text-align: left;
        display: block;
        margin-bottom: 5px;
    }

    .custom-form-group {
        margin-bottom: 20px;
    }

    .custom-form-control {
        width: 100%;
    }
</style>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            @using (Html.BeginForm("Register", "Kullanicilar", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()

                                <h2 class="fw-bold mb-4 text-uppercase">Kayıt Ol</h2>
                                <p class="text-white-50 mb-4">Lütfen bilgilerinizi girin</p>

                                <div class="form-group custom-form-group">
                                    @Html.LabelFor(model => model.Ad, htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Adınız" } })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group custom-form-group">
                                    @Html.LabelFor(model => model.Soyad, htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Soyadınız" } })
                                    @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group custom-form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "E-posta adresiniz" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group custom-form-group">
                                    @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.PasswordFor(model => model.Sifre, new { @class = "form-control custom-form-control", placeholder = "Şifreniz" })
                                    @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary btn-block">Kayıt Ol</button>
                                </div>
                            }
                        </div>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
