@{
    ViewBag.Title = "Login";
}

<style>
    .custom-label {
        text-align: left;
        display: block;
        margin-bottom: 5px;
    }

    .custom-form-group {
        margin-bottom: 20px;
    }

    .custom-form-control {
        width: 100%;
    }
</style>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            @using (Html.BeginForm("Login", "Kullanicilar", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()

                                <h2 class="fw-bold mb-4 text-uppercase">Giriş Yap</h2>
                                <p class="text-white-50 mb-4">Lütfen E-postanı ve Şifreni Gir</p>

                                <div class="form-group custom-form-group">
                                    @Html.Label("Email", htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.TextBox("email", null, new { @class = "form-control custom-form-control", placeholder = "E-posta adresinizi girin" })
                                </div>

                                <div class="form-group custom-form-group">
                                    @Html.Label("Şifre", htmlAttributes: new { @class = "form-label text-left custom-label" })
                                    @Html.Password("password", null, new { @class = "form-control custom-form-control", placeholder = "Şifrenizi girin" })

                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary btn-block">Giriş Yap</button>
                                </div>

                            }
                        </div>

                        

                        <div>
                            <p class="mb-0">
                                Hesabın yok mu? <a href="@Url.Action("Register", "Kullanicilar")" class="text-white-50 fw-bold">Kayıt Ol</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
