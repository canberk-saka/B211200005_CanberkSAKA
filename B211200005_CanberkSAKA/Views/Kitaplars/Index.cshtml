@model IEnumerable<Kitaplar>

@{
    ViewBag.Title = "Satış Listesi";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .book-card {
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            overflow: hidden;
        }

            .book-card:hover {
                transform: scale(1.05);
            }

        .book-image {
            height: 100%;
            width: 100%;
            object-fit: contain;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #343a40;
        }

        .author-info,
        .card-text {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .operations {
            background-color: #343a40;
            padding: 10px;
            border-top: 1px solid #dee2e6;
            border-radius: 0 0 10px 10px;
        }

        .btn-outline-secondary {
            color: #ffffff;
            border-color: #ffffff;
        }

            .btn-outline-secondary:hover {
                color: #343a40;
                background-color: #ffffff;
                border-color: #ffffff;
            }
    </style>
    <title>Satış Listesi</title>
</head>
<body>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var item in Model)
            {
                <div class="col-md-4 book-card">

                    <div class="card h-100">
                        <div style="height: 200px; overflow: hidden;">
                            <img src="@item.KitapResim" alt="Kitap Resmi" class="card-img-top book-image">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.KitapAdi)</h5>

                            @{
                                var yazarAdi = item.Yazarlar?.AdSoyad;
                            }
                            <p class="card-text author-info"><strong>Yazar:</strong> @yazarAdi</p>

                            <p class="card-text"><strong>Fiyat:</strong> @string.Format("{0:C}", item.Fiyat)</p>
                        </div>
                        <div class="operations">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", new { id = item.KitapID })" class="btn btn-sm btn-outline-secondary">Ürünü İncele</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</body>
</html>
