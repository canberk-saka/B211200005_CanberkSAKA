@model IEnumerable<B211200005_CanberkSAKA.Kategoriler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_YoneticilerNavbar.cshtml";
}

<div class="container mt-4">

    <p>
        @Html.ActionLink("Yeni Oluştur", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.KategoriAdi)</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.KategoriAdi)</td>
                    <td>
                        @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
