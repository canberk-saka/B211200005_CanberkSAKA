@model IEnumerable<B211200005_CanberkSAKA.Kitaplar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_YoneticilerNavbar.cshtml";
}

<div class="container mt-4">
    <p>
        @Html.ActionLink("Yeni Kitap Ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Kitap Adı</th>
                    <th scope="col">Yıldız ID</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Stok Miktarı</th>
                    <th scope="col">Açıklama ID</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Tür</th>
                    <th scope="col">Yayınevi</th>
                    <th scope="col">Yazar</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.KitapAdi)</td>
                        <td>@Html.DisplayFor(modelItem => item.YildizID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fiyat)</td>
                        <td>@Html.DisplayFor(modelItem => item.StokMiktari)</td>
                        <td>@Html.DisplayFor(modelItem => item.AciklamaID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tur.TurAdi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Yayinevleri.Ad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Yazarlar.AdSoyad)</td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.KitapID }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.KitapID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
